<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mandiri_blue"
        tools:context=".TopUpActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:padding="30dp">
            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="0.5" android:textSize="20sp" android:text="Amount :"
                        android:textColor="@color/pureWhite"/>
            <EditText
                    android:background="@color/pureWhite"
                    android:layout_width="250dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"/>
            <Button android:layout_width="wrap_content" android:layout_height="0dp"
                    android:layout_weight="1" android:layout_gravity="right" android:layout_marginTop="10dp"
            android:text="Submit"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>